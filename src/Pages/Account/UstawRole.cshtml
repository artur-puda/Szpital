@page
@model Szpital.Pages.Account.UstawRoleModel
@{
    ViewData["Title"] = "UstawRole";
}

<form method="post" style="width:250px">
    <div class="form-group">
        <select class="form-control" name="UserId">
            @foreach (var dr in Model.Uzytkownicy)
            {
                <option value="@dr.Id">@dr.UserName (@dr.Role.Name)</option>
            }
        </select>
    </div>  
    
    <div class="form-group">
        <select class="form-control" name="RoleId">
            <option value="2">Pacjent</option>
            <option value="3">Doktor</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz się</button>
</form>
